# Environment variables for Coperniq Partner Prospecting System
# Copy to .env and fill in your API keys

# ============================================================================
# SCRAPING - Cloud Browser Automation
# ============================================================================

# RunPod Serverless Playwright API (for automated cloud scraping)
# Get these from: https://www.runpod.io/console/serverless
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here

# Browserbase (alternative cloud browser option)
# BROWSERBASE_API_KEY=your_api_key_here
# BROWSERBASE_PROJECT_ID=your_project_id_here

# ============================================================================
# ENRICHMENT - Contact & Company Data
# ============================================================================

# Apollo.io API (for company + contact enrichment)
# Get from: https://app.apollo.io/#/settings/integrations/api
APOLLO_API_KEY=your_apollo_api_key_here

# Clay.com Webhook (for enrichment workflows)
# Get from: Clay table → Integrations → Webhook
CLAY_WEBHOOK_URL=your_clay_webhook_url_here

# ============================================================================
# CRM - Lead Management & Outreach
# ============================================================================

# Close CRM API (for lead import + Smart Views)
# Get from: https://app.close.com/settings/api/
CLOSE_API_KEY=your_close_api_key_here

# ============================================================================
# FUTURE - Outreach Automation (10x BDR Goal)
# ============================================================================

# Email (SendGrid or Mailgun)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# MAILGUN_API_KEY=your_mailgun_api_key_here
# MAILGUN_DOMAIN=your_domain_here

# SMS (Twilio)
# TWILIO_ACCOUNT_SID=your_account_sid_here
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# OUTPUT SETTINGS
# ============================================================================

OUTPUT_DIR=./output
